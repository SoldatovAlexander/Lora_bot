{
  "title": "LLM FastAPI + GPU (Selectel T4)",
  "uid": "llm-fastapi-gpu-selectel",
  "schemaVersion": 39,
  "version": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "RPS (FastAPI)",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"fastapi_llm\"}[1m]))",
          "legendFormat": "RPS",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Latency p95 (s)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"fastapi_llm\"}[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "LLM generation p95 (s)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(llm_generation_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "gen_p95",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "GPU Util (%)",
      "targets": [
        {
          "expr": "avg(DCGM_FI_DEV_GPU_UTIL{job=\"gpu\"})",
          "legendFormat": "GPU util",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "GPU Memory Used (MiB)",
      "targets": [
        {
          "expr": "avg(DCGM_FI_DEV_FB_USED{job=\"gpu\"})",
          "legendFormat": "FB used",
          "refId": "A"
        }
      ]
    }
  ]
}